{
    "name": "basic-app/appstarter",
    "type": "project",
    "description": "Basic App",
    "homepage": "http://basic-app.com",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2",
        "codeigniter4/framework": "*",
        "basic-app/system": "*"
    },
    "require-dev": {
        "mikey179/vfsstream": "1.6.*",
        "phpunit/phpunit": "^7.0"
    },
    "scripts": {
        "post-create-project-cmd": [
            "BasicApp\\Core\\Composer::postCreateProject"
        ],
        "post-update-cmd": [
            "@composer dump-autoload",
            "BasicApp\\Core\\Composer::postUpdate"
        ],
        "post-install-cmd": [
            "@composer dump-autoload",
            "BasicApp\\Core\\Composer::postInstall"
        ]
    },
    "extra": {
        "BasicApp\\Core\\Composer::postCreateProject": {
            "copy": [
                {
                    "env": ".env"
                }
            ]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }        
    ]
}
